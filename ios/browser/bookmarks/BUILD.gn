import("//build/config/ios/rules.gni")

source_set("bookmarks") {
  configs += [ "//build/config/compiler:enable_arc" ]

  sources = [
    "//ios/chrome/browser/bookmarks/bookmark_client_impl.cc",
    "//ios/chrome/browser/bookmarks/bookmark_client_impl.h",
    "//ios/chrome/browser/bookmarks/bookmark_model_factory.cc",
    "//ios/chrome/browser/bookmarks/bookmark_model_factory.h",
    "//ios/chrome/browser/bookmarks/bookmark_sync_service_factory.cc",
    "//ios/chrome/browser/bookmarks/bookmark_sync_service_factory.h",
    "//ios/chrome/browser/bookmarks/managed_bookmark_service_factory.h",
    "//ios/chrome/browser/bookmarks/managed_bookmark_service_factory.mm",
    "//ios/chrome/browser/bookmarks/startup_task_runner_service_factory.cc",
    "//ios/chrome/browser/bookmarks/startup_task_runner_service_factory.h",
  ]

  deps = [
    "//base",
    "//brave/ios/browser/browser_state",
    "//brave/ios/browser/signin",
    "//components/bookmarks/browser",
    "//components/bookmarks/managed",
    "//components/favicon/core",
    "//components/favicon_base",
    "//components/history/core/browser",
    "//components/keyed_service/core",
    "//components/keyed_service/ios",
    "//components/prefs",
    "//components/sync_bookmarks",
    "//components/undo",
    # for ios::GetChromeBrowserProvider
    "//ios/public/provider/chrome/browser",
    "//ios/web",
  ]

  public_deps = [
    # for ios/web/public/browser_state
    "//ios/web/public",
  ]
}
