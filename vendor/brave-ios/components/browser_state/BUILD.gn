import("//build/config/ios/rules.gni")

config("internal_config") {
  cflags = [
    "-fobjc-abi-version=2",
    "-fobjc-legacy-dispatch",
    "-Wno-objc-property-synthesis",
    "-Wno-sign-compare",
  ]

  include_dirs = [
    "."
  ]
}

source_set("browser_state") {
  configs += [ ":internal_config" ]
  configs += [ "//build/config/compiler:enable_arc" ]
  configs -= [ "//build/config/gcc:symbol_visibility_hidden" ]

  sources = [
    "brave_browser_state.cc",
    "brave_browser_state.h",
    "BraveBrowserStateIOData.h",
    "BraveBrowserStateIOData.cc",
    "web_browser_state.cc",
    "web_browser_state.h",
    "chrome_browser_state.cc",
    "chrome_browser_state.h",
    "chrome_state_manager.h",
    "brave_browser_state_manager.cc",
    "brave_browser_state_manager.h",
    "bookmark_model_loaded_observer.h",
    "bookmark_model_loaded_observer.cc"
  ]

  deps = [
    "//base",
    "//components/prefs",
    "//components/pref_registry",
    "//components/sync_preferences"
  ]
}
